<% include ../partials/header%>

    <div class="row">
        <h1 style="text-align: center;">Add new campground</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form method="POST" action="/campgrounds">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="new campground" name="newCampground" required/>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" placeholder="price" name="price" min="0.00" step="0.01" required/>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="enter photo url" name="photoUrl" required/>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="enter description" name="description"/>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-lg btn-block" type="submit" value="SUBMIT"/>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>

<% include ../partials/footer%>
