<% include ../partials/header%>

    <div class="row">
        <h1 style="text-align: center;">Add new comment for <%=campground.name%></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form method="POST" action="/campgrounds/<%=campground._id%>/comments">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="comment text" name="comment[text]"/>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-lg btn-block" type="submit" value="SUBMIT"/>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
<% include ../partials/footer%>
