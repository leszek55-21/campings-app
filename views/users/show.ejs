<% include ../partials/header%>

<div class="row">
    <h1>Welcome to <%= user.username%> profile</h1> 
    <div class="col-md-4">
       <div calss="thumbnail">
           <h3><%= user.firstName + " " + user.lastName%></h3>
           <img class="img-responsive" src="<%=user.avatar%>" alt="user profile image">
           <div class="caption">
               <a href="mailto:<%=user.email%>"><h4><%=user.email%></h4></a>
           </div>
       </div>
    </div>
    <div class="col-md-8">
        <h2><%=user.username%>'s campgrounds:</h2>
        <ul>
            <% campgrounds.forEach(function(campground) { %>
                <li type="none">
                    <h3><a class="glyphicon-tent" href="/campgrounds/<%=campground.id%>"> <%=campground.name%></a></h3>
                </li>
            <% }); %>
        </ul>
    </div>
</div>

<% include ../partials/footer%>